  <th>CreatedAt</th>
  <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
</tr>
<tr>
  <th>UpdatedAt</th>
  <td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
</tr>
<tr>
  <th>Amount</th>
  <td>{{ reservation.amount }}</td>
</tr>
<tr>
  <th>Registered</th>
  <td>{{ reservation.registered ? 'Yes' : 'No' }}</td>
</tr>
</tbody>
</table>

