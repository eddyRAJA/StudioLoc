{% extends 'base.html.twig' %}

{% block title %}Hello CardController!{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="example-wrapper">
    <div class="container">
      <section class="bg-light p-3">
        <h2>Your cady of reservation</h2>
      </section>

      <table class="table">
        <thead>
          <tr>
            <th>Studio</th>
            <th>Amount</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          {% for elt in dataCady %}
            <tr>
              <td>{{ elt.reservation.studio }}
              </td>
              <td >
                {{ elt.reservation.amount }}
                €</td>
              <td >{{ elt.quantity }}
              </td>
              <td >{{ elt.quantity * elt.reservation.amount }}
              </td>
              <td>
                {#     <a href="{{ path('cart_add', {'id': elt.reservation.id }) }}" class="btn btn-success">
                  <i class="bi bi-cart-plus"></i>
                </a> 
                <a href="{{ path('cart_remove', {'id': elt.reservation.id }) }}" class="btn btn-danger">
                  <i class="bi bi-cart-dash"></i>
                </a>
             #}
                <a href="{{ path('cart_delete', {'id': elt.reservation.id }) }}" class="btn btn-warning">
                  <i class="bi bi-cart-x">Delete</i>
                </a>
              </td>
            </tr>

          {% else %}
            <tr>
              <td colspan="5" class="text-center">
                Your cady is empty
              </td>
            </tr>
          {% endfor %}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3">Total</td>
            <td>{{ total }}
              €</td>
            <td>
              {% if dataCady %}
                <a href="{{ path('cart_delete_all') }}" class="btn btn-danger">
                  <i class="bi bi-cart-x">DeleteAll</i>
                </a>
              {% endif %}

            </td>
          </tr>
        </tfoot>

      {% endblock %}
