{% extends 'base.html.twig' %}

{% block title %}MyCompany{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="container">

    <div class="media-body">
      <h1 class="mt-0">
        {{ company.name }}</h1>
      <div class="text-center"><img class="img-fluid" src="{{ company.poster }}" alt="poster of {{ company.name }} "></div>

      <p>Description :
        {{ company.description|raw }}</p>
      {# 
      <p>Created on:
        {{ company.createdAt }}</p>
      <p>Updated on:
        {{ company.updatedAt }}</p>
     #}
      <p>Updated on:
        {{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}
      </p>
    </div>
    <p>
      {{ company.slug }}</p>

  </div>
{% endblock %}
